<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dark_blue_orange_edge_background"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/tv_eventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tv_eventDescription"
        android:paddingBottom="3dp"
        android:text="70&apos;s Theme"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Navy"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_venueAdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_eventName"
        android:paddingBottom="3dp"
        android:paddingRight="10dp"
        android:text="Date:"
        android:textColor="@color/Navy"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_venueG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_venueAdr"
        android:paddingBottom="3dp"
        android:paddingRight="10dp"
        android:text="Time:"
        android:textColor="@color/Navy"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_eventV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_venueG"
        android:paddingBottom="3dp"
        android:paddingRight="10dp"
        android:text="Venue:"
        android:textColor="@color/Navy"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_eventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_venueAdr"
        android:layout_alignRight="@+id/tv_eventName"
        android:layout_toRightOf="@+id/tv_venueAdr"
        android:text="TextView"
        android:textColor="@color/Navy" />

    <TextView
        android:id="@+id/tv_eventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_venueG"
        android:layout_alignRight="@+id/tv_eventDate"
        android:layout_toRightOf="@+id/tv_venueG"
        android:text="TextView"
        android:textColor="@color/Navy" />

    <TextView
        android:id="@+id/tv_eventVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_eventV"
        android:layout_alignRight="@+id/tv_eventTime"
        android:layout_toRightOf="@+id/tv_eventV"
        android:text="TextView"
        android:textColor="@color/Navy" />

    <TextView
        android:id="@+id/tv_eventDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_eventV"
        android:paddingBottom="3dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Navy"
        android:textSize="15sp" />

</RelativeLayout>
