<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dark_blue_orange_edge_background" >

    <TextView
        android:id="@+id/tv_teamHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tv_resultText"
        android:padding="5dp"
        android:text="NW beat Gauteng"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Navy"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_teamFinalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_teamHeader"
        android:layout_below="@+id/tv_teamHeader"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:text="17-3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Red"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_teamresultGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_teamFinalScore"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:text="Matches Played:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Navy"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_resultGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_teamresultGender"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:text="Games Played:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Navy"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tv_resultPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_resultGames"
        android:paddingBottom="15dp"
        android:paddingLeft="5dp"
        android:text="Points Played:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Navy"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tv_resultTotalMatchesPlayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_teamresultGender"
        android:layout_toRightOf="@+id/tv_teamresultGender"
        android:paddingRight="35dp"
        android:text="4"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Navy"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_resultTotalGamesPlayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_resultGames"
        android:layout_alignLeft="@+id/tv_resultTotalMatchesPlayed"
        android:text="15"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Navy"
        android:textStyle="bold"/>
        
    <TextView
        android:id="@+id/tv_resultsTotalPointsPlayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_resultPoints"
        android:layout_alignLeft="@+id/tv_resultTotalMatchesPlayed"
        android:paddingBottom="15dp"
        android:text="125"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Navy"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_venueGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_resultDate"
        android:layout_below="@+id/tv_resultDate"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:text="Time:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Navy"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_resultVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_venueGPS"
        android:layout_below="@+id/tv_venueGPS"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:text="Venue:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Navy"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_resultCourt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_resultVenue"
        android:layout_below="@+id/tv_resultVenue"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:text="Court:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Navy"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_resultDatePlayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_resultDate"
        android:layout_alignLeft="@+id/tv_resultTotalMatchesPlayed"
        android:text="17 July 2015"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Navy" />

    <TextView
        android:id="@+id/tv_resultTimePlayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_venueGPS"
        android:layout_alignLeft="@+id/tv_resultDatePlayed"
        android:text="14:00"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Navy" />

    <TextView
        android:id="@+id/tv_resultVenuePlayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_resultVenue"
        android:layout_alignLeft="@+id/tv_resultTimePlayed"
        android:text="Potch CC"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Navy" />

    <TextView
        android:id="@+id/tv_resultCourtPlayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_resultCourt"
        android:layout_alignLeft="@+id/tv_resultVenuePlayed"
        android:text="5"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Navy" />

    <TextView
        android:id="@+id/tv_resultText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_resultCourt"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="3dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/DimGray"
        android:clickable="true"/>

    <TextView
        android:id="@+id/tv_resultDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_resultPoints"
        android:layout_below="@+id/tv_resultPoints"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:text="Date:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Navy"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_resultTotalMatchesWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_resultTotalMatchesPlayed"
        android:layout_toRightOf="@+id/tv_resultTotalMatchesPlayed"
        android:text="3 /"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Green" />

    <TextView
        android:id="@+id/tv_resultTotalGamesWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_resultTotalGamesPlayed"
        android:layout_alignLeft="@+id/tv_resultTotalMatchesWon"
        android:text="12 /"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Green" />

    <TextView
        android:id="@+id/tv_resultTotalPointsWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_resultsTotalPointsPlayed"
        android:layout_alignLeft="@+id/tv_resultTotalGamesWon"
        android:text="103 /"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Green" />

    <TextView
        android:id="@+id/tv_resultTotalMatchesLost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_resultTotalMatchesWon"
        android:layout_toRightOf="@+id/tv_resultTotalMatchesWon"
        android:text=" 1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Red" />

    <TextView
        android:id="@+id/tv_resultTotalGamesLost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_resultTotalGamesWon"
        android:layout_toRightOf="@+id/tv_resultTotalGamesWon"
        android:text=" 3"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Red" />

    <TextView
        android:id="@+id/tv_resultTotalPointsLost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_resultTotalPointsWon"
        android:layout_toRightOf="@+id/tv_resultTotalGamesLost"
        android:text=" 22"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/Red" />

</RelativeLayout>
