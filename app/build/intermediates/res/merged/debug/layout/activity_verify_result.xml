<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
        
    <RelativeLayout 
    	android:id="@+id/container"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:background="@color/White"
    	tools:context="tournament_activities.VerifyResult"
    	tools:ignore="MergeRootFrame" >

	    <TextView
	        android:id="@+id/tv_verifyResult_FixtureDetails"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:padding="5dp"
	        android:text="TextView"
	        android:textColor="@color/DarkBlue"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/tv_verifyResult_FixtureResults"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/tv_verifyResult_FixtureDetails"
	        android:padding="5dp"
	        android:text="TextView"
			android:textColor="@color/DarkBlue" />
	
	    <Button
	        android:id="@+id/btn_verifysubmit"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tv_verifyResult_FixtureResults"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="20dp"
	        android:background="@color/Red"
	        android:text="Submit Result"
	        android:textColor="@color/White"
	        android:textStyle="bold" />

		</RelativeLayout>
</ScrollView>



