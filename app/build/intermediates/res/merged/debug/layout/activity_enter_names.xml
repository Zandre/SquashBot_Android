<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="squashbot.dashboard.EnterNames"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/scoreboard_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Enter the player&apos;s names and choose a avatar colour. Name fields may not be empty or longer than 10 characters."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Navy"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_playerA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/scoreboard_header"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Player A"
        android:inputType="textPersonName"
        android:textColor="@color/OrangeRed"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_playerB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_playerA"
        android:layout_below="@+id/et_playerA"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Player B"
        android:textColor="@color/Navy"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinner_AvatarA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_playerA"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/et_playerA"
        android:background="@color/OrangeRed"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinner_AvatarB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner_AvatarA"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/et_playerB"
        android:background="@color/Aquamarine"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_teamresultGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Gender"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/OrangeRed"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_Gender"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_teamresultGender"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/OrangeRed" />

    <TextView
        android:id="@+id/tv_teamresultSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinner_Gender"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:text="Section"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/OrangeRed"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_Section"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_teamresultSection"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/OrangeRed" />

    <TextView
        android:id="@+id/tv_teamresultFixture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinner_Section"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:text="Fixture"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/OrangeRed"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_Fixture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_teamresultFixture"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/OrangeRed" />

</RelativeLayout>